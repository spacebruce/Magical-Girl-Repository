---
layout: layouts/base.njk
tags: episodes
---
<div class="articleHeader">
    <div class="timeline_item">
        <div class="timeline_image"><img src="/series/{{ series }}/media/{{ image | url }}"/></div>
        <div class = "timeline_item_text">
        <h2 class="post-title">{{ title }}</h2>
        <h2 class="post-title">{{ name }}</h2>
        <h3 class="post-date">{{ date | readableDate }}</h3>
        </div>
    </div>
</div>
<article>
{{ content | safe }}
</article>