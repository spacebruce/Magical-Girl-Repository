---
title: Timeline
layout: layouts/base.njk
eleventyExcludeFromCollections: true
pagination:
  data: collections.posts
  size: 9999
  alias: posts
---
<h1>Timeline</h1>
<ul>
    {% for post in posts %}
        <div class="item">
            <a href="{{ post.url | url }}"><div class="item_image">
                <div><img src="/media/{{ post.data.id }}/icon.jpg"/><span>{{ post.date | justYear }}</span></div>
            </div></a>
            <div class="details">
                <div>
                    <a href="{{ post.url | url }}"><h1>{{ post.data.title }}<br>{{ post.data.name }}</h1></a>
                    <div class="item_tags">
                    {% for tag in post.data.tags %}
                        {% if tag != "posts" %}
                            {% set tagUrl %}/tags/{{ tag }}/{% endset %}<div class="tag"><span class="tag">{{ tag }}</span></div>
                        {% endif %}   
                        {% endfor %}
                    </div>
                    {{ post.data.description }}
                </div>
            </div>
        </div>
    </div>{% endfor %}
</ul>
